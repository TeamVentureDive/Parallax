const step = 0.1
let screen = [];

function calcCircle(radius) {
    let circlePoints = [];
    screen = [4 * radius * radius];

    for (let deg = 0; deg < 361; deg += step) {
        circlePoints.push([Math.floor(radius + Math.cos(deg)), Math.floor(radius + Math.sin(deg))]);
    }

    return circlePoints;
}

